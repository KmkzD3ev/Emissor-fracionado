<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.zenitech.emissorweb"
    android:installLocation="internalOnly">

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="com.android.browser.permission.WRITE_HISTORY_BOOKMARKS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:replace="allowBackup"
        tools:targetApi="q">
        <activity
            android:name=".CancelarPagamentoCartao"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cancelar_pagamento_cartao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CancelarPagamentoCartaoPOS"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cancelar_pagamento_cartao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DevicesActivityPinPad" />
        <activity
            android:name=".GerenciarPagamentoCartao"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_gerenciar_pagamento_cartao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GerenciarPagamentoCartaoPOS"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_gerenciar_pagamento_cartao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivityPrincipal"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfiguracoesApp"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_configuracoes_app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppFinalizado"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_app_finalizado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Suporte"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_suporte"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sobre"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_sobre"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConsultarNFE"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_consultar_nfe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfirmarDadosPedidoNFE"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_confirmar_dados_pedido_nfe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FormPedidosNFE"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_form_pedidos_nfe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Status"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!-- <intent-filter> -->
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <!-- </intent-filter> -->
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sincronizar"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfirmarDadosPedido"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_confirmar_dados_pedido"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TesteConexaoImpressora"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SearchBTActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name=".SearchBLEActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name=".AppStart"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name=".Principal"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FormPedidos"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_form_pedidos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GerenciarBancoProducao"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_gerenciar_banco_producao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Relatorios"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_relatorios"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Impressora"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_impressora"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImpressoraPOS"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_impressora"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeviceListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label=""
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
    </application>

</manifest>